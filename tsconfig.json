{
  "compilerOptions": {
	"baseUrl": ".",
    "outDir": "./public",
	"module": "esnext",
    "target": "ES2019",
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
	    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "jsx": "preserve",
	"moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
	"noUnusedLocals": true,
	"noUnusedParameters": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
	    "paths": {
      "~/*": [
        "src/*"
      ],
      "~c/*": [
        "src/components/*"
      ],
      "~p/*": [
        "src/containers/*"
      ],
      "~s/*": [
        "src/store/*"
      ],
      "~a/*": [
        "src/assets/*"
      ]
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
  ]
}
